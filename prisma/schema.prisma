datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password       String?
  phone             String?  

  otp String?
  otpExpiresAt DateTime?
  refreshToken String?

  brandName String?
  brandLogo String?
  website String?

  connectedSocials SocialPlatform[]

  emailNotification Boolean @default(true)
  pushNotification Boolean @default(false)
  weeklyNotification Boolean @default(true)
  linkedAccounts LinkedAccount[]
  role UserRole @default(USER)


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([email])
  @@index([otp])
  @@index([createdAt])

}
enum SocialPlatform {
  FACEBOOK
  TWITTER
  LINKEDIN
  INSTAGRAM
}
enum UserRole {
  USER
  SUPERADMIN
  CONTENTADMIN
  TECHNICIANADMIN
  FINANCEADMIN
}





model LinkedAccount {
  id             String   @id @default(uuid())
  userId         String
  platform       Platform
  platformUserId String
  accessToken    String
  refreshToken   String?
  scopes         String
  tokenExpiry    DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

 user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Platform {
  FACEBOOK
  INSTAGRAM
  LINKEDIN
  X
}


model Industry {
  id          String        @id @default(uuid())
  name        String
  subIndustries SubIndustry[]

  @@index([name])
}

model SubIndustry {
  id          String        @id @default(uuid())
  name        String
  industry    Industry      @relation(fields: [industryId], references: [id], onDelete: Cascade)
  industryId  String
  images      Image[]

  @@index([industryId])
  @@index([name])
}

model Image {
  id          String        @id @default(uuid())
  file        String
  text          Boolean       @default(false)
  subIndustry SubIndustry   @relation(fields: [subIndustryId], references: [id], onDelete: Cascade)
  subIndustryId String
  createdAt   DateTime      @default(now())

  @@index([subIndustryId])
}
