datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password       String?
  phone             String?  
  logo Logo?

  otp String?
  otpExpiresAt DateTime?
  refreshToken String?

  brandName String?
  brandLogo String?
  website String?

  connectedSocials SocialPlatform[]

  emailNotification Boolean @default(true)
  pushNotification Boolean @default(false)
  weeklyNotification Boolean @default(true)
  linkedAccounts LinkedAccount[]
  role UserRole @default(USER)


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([email])
  @@index([otp])
  @@index([createdAt])

}
enum SocialPlatform {
  FACEBOOK
  TWITTER
  LINKEDIN
  INSTAGRAM
}
enum UserRole {
  USER
  SUPERADMIN
  CONTENTADMIN
  TECHNICIANADMIN
  FINANCEADMIN
}





model LinkedAccount {
  id             String   @id @default(uuid())
  userId         String
  platform       Platform
  platformUserId String
  accessToken    String
  refreshToken   String?
  scopes         String
  tokenExpiry    DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

 user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Platform {
  FACEBOOK
  INSTAGRAM
  LINKEDIN
  X
}


model Industry {
  id          String        @id @default(uuid())
  name        String
  subIndustries SubIndustry[]

  @@index([name])
}

model SubIndustry {
  id          String        @id @default(uuid())
  name        String
  industry    Industry      @relation(fields: [industryId], references: [id], onDelete: Cascade)
  industryId  String
  images      Image[]
  contents   Content[]
  @@index([industryId])
  @@index([name])
}

model Image {
  id          String        @id @default(uuid())
  file        String
  text          Boolean       @default(false)
  subIndustry SubIndustry   @relation(fields: [subIndustryId], references: [id], onDelete: Cascade)
  subIndustryId String
  createdAt   DateTime      @default(now())

  @@index([subIndustryId])
}




enum LogoSize {
  SMALL
  MEDIUM
  LARGE
}

enum LogoPosition {
  TOP_LEFT
  TOP_RIGHT
}
model Logo {
  id String @id @default(uuid())

  file String
  size LogoSize
  position LogoPosition
  color String?

  phone String?
  website String?

  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}


model Content {
  id            String            @id @default(uuid())
  text          String
  subIndustry   SubIndustry       @relation(fields: [subIndustryId], references: [id], onDelete: Cascade)
  subIndustryId String
  hashtags      ContentHashtag[]
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([subIndustryId])
  @@index([createdAt])
}

model Hashtag {
  id       String           @id @default(uuid())
  tag      String           @unique
  contents ContentHashtag[]
}

model ContentHashtag {
  content   Content  @relation(fields: [contentId], references: [id], onDelete: Cascade)
  contentId String
  hashtag   Hashtag  @relation(fields: [hashtagId], references: [id], onDelete: Cascade)
  hashtagId String

  @@id([contentId, hashtagId])
  @@index([hashtagId])
}